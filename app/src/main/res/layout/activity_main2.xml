<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:id="@+id/main2">

    <Button
        android:id="@+id/btnAleatorio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gerador de Valores"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnReverse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Inversor de Texto"
        app:layout_constraintTop_toBottomOf="@id/btnAleatorio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnEventos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registro de Eventos"
        app:layout_constraintTop_toBottomOf="@id/btnReverse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>